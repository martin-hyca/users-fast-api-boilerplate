{% extends "base_template.html.j2" %}
{% block content %}

    <h1>Change Password for {{ user }}</h1>
    <form method="post" action="/settings">
        <div>
            {{ form.current_password.label(for='current_password') }}
            {{ form.current_password(id='current_password') }}
        </div>
        <div>
            {{ form.new_password.label(for='new_password') }}
            {{ form.new_password(id='new_password') }}
        </div>
        <div>
            {{ form.confirm_password.label(for='confirm_password') }}
            {{ form.confirm_password(id='confirm_password') }}
        </div>
        <button type="submit">Change Password</button>
    </form>

{% endblock %}
