{% extends "base_template.html.j2" %}
{% block content %}


    <form method="post" action="/register">
        <div>
            {{ form.username.label(for='username') }}
            {{ form.username(size=20, id='username') }}
            {% if form.username.errors %}
                <ul>
                    {% for error in form.username.errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
        <div>
            {{ form.password.label(for='password') }}
            {{ form.password(size=20, id='password') }}
            {% if form.password.errors %}
                <ul>
                    {% for error in form.password.errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
        <div>
            {{ form.confirm.label(for='confirm') }}
            {{ form.confirm(size=20, id='confirm') }}
            {% if form.confirm.errors %}
                <ul>
                    {% for error in form.confirm.errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
        <div>
            <button type="submit">Register</button>
        </div>
    </form>


{% endblock %}
